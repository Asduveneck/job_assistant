{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017"
    ],
    "types": [
      "node", "express"
    ]
  },
  "include": [
    "src/db/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}