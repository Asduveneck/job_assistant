{
    "compilerOptions": {
        "outDir": "./public/js/",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "lib": [
            "dom", "dom.iterable", "esnext"
        ]
    },
    "include": [
        "src/client/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}