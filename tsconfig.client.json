{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./public/js/",
        "strictNullChecks": true,
        "skipLibCheck": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "lib": [
            "dom", "dom.iterable", "esnext"
        ]
    },
    "include": [
        "src/client/**/*"
    ],
}